<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="https://docs.phpdoc.org/latest/phpdoc.xsd"
>
    <title>Linchpin Block Library</title>
    <paths>
        <output>wiki</output>
    </paths>
    <version number="3.0.0">
        <api>
            <source dsn=".">
                <path>application/*</path>
                <path>assets/js/*</path>
                <path>linchpin-blocks.php</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <path>tests/**/*</path>
                <path>build/**/*</path>
                <path>vendor/**/*</path>
                <path>tests/**/*</path>
                <path>vendor/</path>
                <path>.deployment/</path>
                <path>.github/</path>
                <path>node_modules/</path>
                <path>output/</path>
                <path>js/</path>
                <path>assets/</path>
            </ignore>
        </api>
    </version>
    <template name="./themes/markdown">
        <parameter name="urlFileExtensions" value="yes"/>
    </template>
</phpdocumentor>
